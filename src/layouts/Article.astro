---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"articles">["data"];

const { title, description, pubDate, ogImage } = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={ogImage?.src} type="article">
      <meta property="article:published_time" content={pubDate.toISOString()} />
    </BaseHead>
  </head>

  <body>
    <Header />
    <main>
      <article class="gutter prose-custom mx-auto">
        <h1>{title}</h1>
        <div class="font-mono text-gray-400">
          <FormattedDate date={pubDate} /> Â· David Stotijn
        </div>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
